<h2>Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder: 'tu correo' %>
  </div>

  <div class="field form-group">
    
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'tu password', class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
