
<div class="row">
        <% @stories.reverse.each do |story| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                <%= link_to(image_tag(story.picture), story) if story.picture? %>
                    <div class="caption">
                    <h3><%= story.title %></h3>
                    <small><%= time_ago_in_words(story.created_at) %> ago</small>
                    <p><%= story.content.truncate(150)  %></p>
                    <p><%= link_to 'Show', story, class: "btn btn-primary" %> 
                    <% if user_signed_in?%>
                    <%= link_to 'Edit', edit_story_path(story), class: "btn btn-warning" %> <%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
                    <% end %>
            </div>
        </div>
    </div>
    <% end %>
</div>